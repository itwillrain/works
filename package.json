{
  "name": "works",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "repository": "ssh://git@github.com:NEOPA-Inc/works.git",
  "author": "Takeshi Matsushita <matsushita@neopa.jp>",
  "scripts": {
    "show": "ls-scripts",
    "postinstall": "lerna bootstrap",
    "monorepo:reload": "lerna clean --yes && yarn",
    "clean": "rm -rf ./packages/**/*/node_modules",
    "clean-locks": "rm -rf ./packages/**/*/yarn.lock",
    "clean-cache-hard-source": "rm -rf ./packages/admin/node_modules/.cache/hard-source/",
    "bootstrap": "npx lerna bootstrap",
    "preinstall": "npx only-allow yarn",
    "dev": "run-p dev:* ",
    "dev:front": "pushd ./packages/front && yarn dev && popd",
    "dev:core": "lerna run --scope @works/core dev --parallel",
    "dev:functions": "lerna run --scope @works/functions dev --parallel",
    "generate:dev:front": "lerna run --scope @works/front generate:dev --stream",
    "generate:prod:front": "lerna run --scope @works/front generate:prod --stream",
    "deploy:dev:hosting:front": "lerna run --scope @works/cloud deploy:prod:hosting:front --stream",
    "deploy:dev:functions": "lerna run --scope @works/cloud deploy:dev:functions --stream",
    "build:core": "lerna run --scope @works/core build",
    "build:all": "npx lerna run build",
    "start:emu": "cd ./packages/cloud && yarn start:emu --project itwillrain-portfolio",
    "local": "yarn start:emu & yarn dev",
    "lerna:front": "lerna --scope @works/front",
    "lerna:admin": "lerna --scope @works/admin",
    "lerna:core": "lerna --scope @works/core",
    "lerna:functions": "lerna --scope @works/functions"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "npm-ls-scripts": "^0.1.2",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {}
}
